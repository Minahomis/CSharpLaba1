<Window x:Class="CherkovaV_laba1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CherkovaV_laba1"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Label Content="Дан массив ненулевых целых чисел размера N." HorizontalAlignment="Left" Margin="156,23,0,0" VerticalAlignment="Top"/>
        <Label Content=" Проверить, чередуются ли в нем четные и нечетные числа. " HorizontalAlignment="Left" Margin="156,54,0,0" VerticalAlignment="Top"/>
