        <Label Content="Итог:" HorizontalAlignment="Left" Margin="89,162,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonGo" Content="Посчитать" HorizontalAlignment="Left" Margin="506,249,0,0" VerticalAlignment="Top" Click="ButtonGo_Click"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="228,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="443" Height="22" TextChanged="TextBox1_TextChanged"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="182,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Height="22"/>
